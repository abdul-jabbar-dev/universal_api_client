{
  "manifest_version": 3,
  "name": "Universal API Client",
  "short_name": "API Client",
  "version": "1.0.0",
  "description": "A powerful and universal API testing client built with React and Tailwind CSS, perfect for quickly sending requests and viewing responses in your browser popup.",
  "homepage_url": "https://universalapi.netlify.app",
  "minimum_chrome_version": "100",
  "author": "Abdul Jabbar", 
  "action": {
    "default_popup": "index.html",
    "default_title": "Universal API Client",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}